@using System;
@using Sandbox;
@using Sandbox.UI;

@namespace OITC

@inherits WorldPanel
@attribute [StyleSheet]

@code
{
	public long SteamId { get; set; }
	public string Name { get; set; }

	public Nameplate(string name)
	{
		Name = name;
		var width = 1100;
		PanelBounds = new Rect(-width / 2, -100, width, 230);
	}

	protected override int BuildHash()
	{
		return HashCode.Combine(SteamId, Name.FastHash());
	}
}

<root class="box dark">
	<img class="pfp" src="avatar:@SteamId" />
	<label class="aligned-text bold" style="text-overflow:clip;">@Name</label>
</root>
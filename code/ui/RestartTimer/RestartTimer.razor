@using Sandbox.UI

@namespace OITC

@inherits Panel
@attribute [StyleSheet("/ui/RestartTimer/RestartTimer.scss")]

@code
{
	public static RealTimeUntil UntilRestart { get; set; }

	protected override int BuildHash()
	{
		return System.HashCode.Combine(Time.Delta);
	}
}

@{
	if (UntilRestart <= 0.1f)
		UntilRestart = 0.0f;

	SetClass("active", UntilRestart > 0.7f);
}

<root class="panel blur">
	<label id="countdown">@UntilRestart.Relative.ToString("0.#")</label>
</root>
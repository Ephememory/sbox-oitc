@using Sandbox;
@using Sandbox.UI;

@namespace OITC

@inherits RootPanel
@attribute [StyleSheet]

<root>
	<Crosshair />
	<Ammo />
	<Chat />
	<Killfeed />
	<GameStateDisplay />
	<RestartTimer />
	<Scoreboard />
	<HowToPlay/>
</root>


@code
{
	public static Hud Instance { get; private set; }

	public Hud()
	{
		if (!Game.IsClient)
			return;

		if(Instance is not null)
		{
			Delete();
			return;
		}

		Game.RootPanel = this;
		Instance = this;
	}
}